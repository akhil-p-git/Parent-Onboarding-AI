# Zapier Triggers API - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=zapier-triggers-api
APP_ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/triggers_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# REDIS / CACHE
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# =============================================================================
# AWS (for SQS, S3, etc.)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# SQS Queues
SQS_EVENTS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/events-queue
SQS_DELIVERY_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/delivery-queue
SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/123456789/dead-letter-queue

# S3 (for event archival)
S3_ARCHIVE_BUCKET=triggers-api-archive

# =============================================================================
# SECURITY
# =============================================================================
# Secret for hashing API keys (generate with: openssl rand -hex 32)
API_KEY_SECRET=your_32_byte_hex_secret_here

# Secret for signing webhooks (generate with: openssl rand -hex 32)
WEBHOOK_SIGNING_SECRET=your_webhook_signing_secret

# JWT (if using JWT auth)
JWT_SECRET=your_jwt_secret
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# =============================================================================
# OBSERVABILITY
# =============================================================================
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=triggers-api

# Sentry (optional)
SENTRY_DSN=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_WEBHOOK_DELIVERY=true
ENABLE_EVENT_REPLAY=false
ENABLE_SCHEMA_VALIDATION=false
